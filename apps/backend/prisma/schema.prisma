// File: prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                      String    @id @default(auto()) @map("_id") @db.ObjectId
  phone                   String    @unique
  name                    String?
  accountNumber           String?
  role                    String
  email                   String?
  password                String?
  otp                     String?
  otpExpiresAt            DateTime?
  status                  String    @default("unregistered")
  lastRegistrationAttempt DateTime?
  walletAddress           String?   // Blockchain wallet address
  reputationScore         Float     @default(0.0) // Farmer reputation (0-100)
  totalSales              Int       @default(0) // Total products sold
  successfulTransactions  Int       @default(0) // Successful transactions
  disputeCount            Int       @default(0) // Number of disputes

  products         Product[]
  cartItems        CartItem[]
  orders           Order[]
  transactions     Transaction[]
  advices          Advice[]
  farmerRegistries FarmerRegistry[]
  nftCertificates  NFTCertificate[] @relation("CertificateOwner")

  createdAt            DateTime?             @default(now()) @map("createdAt")
  updatedAt            DateTime?             @updatedAt @map("updatedAt")
  fertilizerAdvices    FertilizerAdvice[]    @relation("UserFertilizerAdvices")
  soilData             SoilData[]            @relation("UserSoilData")
  farmerProductRecords FarmerProductRecord[] @relation("RecordedByUser")
}

model Product {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  onchainId   Int?
  seller      String?
  buyer       String?     // Buyer wallet address
  onchainPrice String?
  metadataUri String?
  onchainTxHash String?
  onchainLogIndex Int?
  onchainBlockNumber Int?
  quantity    Int
  price       Float?
  description String?
  imageUrl    String?
  status      String      @default("available")
  isSold      Boolean     @default(false)
  userId      String?     @db.ObjectId // Make this field optional
  user        User?       @relation(fields: [userId], references: [id], onDelete: SetNull) // Make the relation optional
  cartItems   CartItem[]
  orderItems  OrderItem[]
  nftCertificate NFTCertificate? // One NFT per product

  // Escrow fields
  deliveryConfirmed Boolean   @default(false)
  disputeRaised     Boolean   @default(false)
  escrowReleaseTime  DateTime? // When escrow can be released
  escrowStatus       String?  @default("pending") // pending, confirmed, released, disputed, resolved

  farmerName  String?
  farmerPhone String?
  createdAt            DateTime?             @default(now()) @map("createdAt")
  updatedAt            DateTime?             @updatedAt @map("updatedAt")
  isDeleted            Boolean               @default(false)
  farmerProductRecords FarmerProductRecord[] @relation("ProductRecords")
  supplyChainTrace     SupplyChainTrace?
}

model CartItem {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  userId    String @db.ObjectId
  productId String @db.ObjectId
  quantity  Int

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@unique([userId, productId])
}

model Order {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  userId      String       @db.ObjectId
  user        User         @relation(fields: [userId], references: [id])
  status      String       @default("pending")
  orderItems  OrderItem[]
  transaction Transaction?
  txRef       String?

  createdAt DateTime @default(now())
}

model OrderItem {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  orderId     String @db.ObjectId
  productId   String @db.ObjectId
  quantity    Int
  priceAtTime Float

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model Transaction {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  txRef   String @unique
  amount  Float
  status  String @default("pending")
  orderId String @unique @db.ObjectId
  order   Order  @relation(fields: [orderId], references: [id])

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime? @default(now()) @map("createdAt")
  updatedAt DateTime? @updatedAt @map("updatedAt")
}

model Advice {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  advice  String
  crop    String
  region  String
  problem String
  userId  String @db.ObjectId
  user    User   @relation(fields: [userId], references: [id])
}

model DiseaseAdvice {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  image       String
  diseaseName String
  causes      String
  treatment   String

  createdAt DateTime @default(now())
}

model DisasterAlert {
  id          String   @id @default(cuid()) @map("_id")
  type        String
  severity    String
  description String
  date        DateTime
  createdAt   DateTime @default(now())
}

model FarmerRegistry {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  phone     String  @unique
  region    String?
  addedById String  @db.ObjectId
  addedBy   User    @relation(fields: [addedById], references: [id])

  isRegistered Boolean @default(false)

  createdAt DateTime @default(now())
}

model News {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  category    String
  title       String
  description String
  prices      Json?
  createdAt   DateTime @default(now())
}

model FertilizerAdvice {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  advice   String
  crop     String?
  region   String?
  problem  String?
  sent     Boolean   @default(false)
  sentAt   DateTime?
  farmerId String    @db.ObjectId
  farmer   User      @relation(fields: [farmerId], references: [id], name: "UserFertilizerAdvices")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SoilData {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  farmerId   String  @db.ObjectId
  farmer     User    @relation(fields: [farmerId], references: [id], name: "UserSoilData")
  ph         Float
  nitrogen   Float
  phosphorus Float
  potassium  Float
  region     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FarmerProductRecord {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  farmerName   String
  farmerPhone  String
  bankAccount  String
  productName  String
  productImage String?
  amount       Int
  pricePerUnit Float
  recordedById String   @db.ObjectId
  recordedBy   User     @relation("RecordedByUser", fields: [recordedById], references: [id])
  productId    String?  @db.ObjectId
  product      Product? @relation("ProductRecords", fields: [productId], references: [id])

  createdAt DateTime @default(now())
  isPosted  Boolean  @default(false)
}

// Record of on-chain marketplace transactions (ProductBought events)
model OnchainTransaction {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  txHash           String   @unique
  onchainProductId Int
  buyer            String
  seller           String?
  amount           String
  blockNumber      Int?
  logIndex         Int?

  createdAt DateTime @default(now())
}

// NFT Certificate for product authenticity and provenance
model NFTCertificate {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  productId       String   @unique @db.ObjectId
  product         Product  @relation(fields: [productId], references: [id])
  tokenId         String?  @unique // On-chain NFT token ID
  certificateHash String   @unique // IPFS hash or metadata hash
  metadataUri     String?  // IPFS URI for NFT metadata
  imageUri        String?  // Certificate image URI
  ownerAddress    String?  // Current owner wallet address
  ownerId         String?  @db.ObjectId
  owner           User?    @relation("CertificateOwner", fields: [ownerId], references: [id])
  
  // Certificate details
  productName     String
  farmerName      String?
  farmerAddress   String?
  region          String?
  qualityGrade    String?  // A, B, C, etc.
  organicCertified Boolean @default(false)
  harvestDate     DateTime?
  transactionHash String?  // Link to purchase transaction
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Farmer Reputation History (for tracking reputation changes)
model FarmerReputationHistory {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  farmerId        String   @db.ObjectId
  farmerPhone     String   // Denormalized for easier queries
  previousScore   Float
  newScore        Float
  changeReason    String   // "transaction_completed", "dispute_resolved", etc.
  transactionId   String?   // Related transaction/product ID
  notes           String?
  
  createdAt       DateTime @default(now())
}

// Supply Chain Traceability - Track products from farm to buyer
model SupplyChainTrace {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  productId       String   @unique @db.ObjectId
  product         Product  @relation(fields: [productId], references: [id])
  onchainId       Int?     // Link to on-chain product ID
  
  // Origin information
  farmLocation    String?   // Farm GPS coordinates or address
  farmRegion      String?
  harvestDate     DateTime?
  
  // Current status
  currentStage    String   @default("harvested") // harvested, in_transit, at_warehouse, delivered
  currentLocation String?  // Current GPS coordinates
  estimatedDelivery DateTime?
  
  // Cross-chain verification (Polkadot feature)
  verificationHash String?  @unique // Hash for cross-chain verification
  verifiedOnChains String[] // Array of chain names where verified (e.g., ["polkadot", "kusama"])
  
  // Quality metrics during transport (filtered by readingType: "temperature" or "humidity")
  readings        SupplyChainReading[]
  
  // Timeline of events
  events          SupplyChainEvent[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Supply chain location/condition readings (IoT sensor data simulation)
model SupplyChainReading {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  traceId         String   @db.ObjectId
  trace           SupplyChainTrace @relation(fields: [traceId], references: [id], onDelete: Cascade)
  readingType     String   // "temperature" or "humidity"
  value           Float    // Temperature in Celsius or Humidity %
  location        String?  // GPS coordinates when reading taken
  timestamp       DateTime @default(now())
  recordedBy      String?  // Device ID or transporter ID
  
  createdAt       DateTime @default(now())
}

// Supply chain events (milestones in the journey)
model SupplyChainEvent {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  traceId         String   @db.ObjectId
  trace           SupplyChainTrace @relation(fields: [traceId], references: [id], onDelete: Cascade)
  eventType       String   // "harvested", "packaged", "shipped", "in_transit", "at_warehouse", "delivered"
  location        String?  // GPS coordinates
  description     String?
  verified        Boolean  @default(false) // Whether verified on-chain
  verificationTxHash String? // Transaction hash if verified on-chain
  metadata        Json?    // Additional event data
  
  createdAt       DateTime @default(now())
}
